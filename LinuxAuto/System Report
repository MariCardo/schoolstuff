#!/bin/bash
#Variables defined here
###
#
dt=$(date '+%d/%m/%Y %H:%M:%S');
#
cpu=$(lscpu | grep 'Model name' | cut -f 2 -d ":" );
#
speed1=$(sudo dmidecode -t processor | grep -m 1 'Current Speed' | cut -f 2 -d ":" );
#
speed2=$(sudo dmidecode -t processor | grep -m 1 'Max Speed' | cut -f 2 -d ":" );
#
video=$(lspci | grep -i --color 'vga\|3d\|2d')
#
TotalMem=$(free -g | grep Mem: | awk '{print $2}')
#
Disks=$(lshw -short -C disk | grep 'disk' | awk '{print $4 $5 $6}' )
#
fqn=$(nslookup $(hostname -i) | cut -f 1,3)
###
echo
echo "System report generated by" $USER,"$dt" 
echo
echo "System Information"
echo "=================="
echo "Hostname: "$HOSTNAME
echo "OS:" "$(lsb_release -ds)"
echo "Uptime:" `uptime -p`
echo
echo "Hardware Information"
echo "===================="
echo "CPU:" $cpu
echo "Speed (Current/Maximum):" $speed1 "/" $speed2
echo "RAM:" $TotalMem"GB"
echo "Disk(s):" $Disks
echo "Video:" $video
echo
echo "Network Information"
echo "==================="
echo "FQDN:" $fqn
echo "Host Address: "
echo "Gateway IP: "
echo "DNS Server: "
echo "Interface Name: "
echo "IP Address: "
echo
echo "System Status"
echo "============="
echo "Users Logged In:" `users`
echo "Disk Space: " 
echo "Process Count:" `ps -e --no-headers | wc -l`
echo "Load averages: "
echo "Memory Allocation: "
echo "Listening Network Ports: "
echo "UFW Rules: "
echo
